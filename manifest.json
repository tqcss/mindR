{
    "manifest_version": 3,
    "name": "mindR",
    "description": "Reminder Web Extension",
    "version": "1.0",
    "permissions": ["alarms", "notifications", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "type": "module"
    }
}